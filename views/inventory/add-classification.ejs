<!-- views/inventory/add-classification.ejs -->
<h1>Add New Classification</h1>
<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>
<% if (errors && errors.length > 0) { %>
  <ul class="error-list">
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form id="addClassificationForm" class="add-classification-form" action="/inv/add-classification" method="POST" novalidate>
  <label for="classification_name">Classification Name (no spaces or special characters):</label>
  <input type="text" id="classification_name" name="classification_name" pattern="^[A-Za-z0-9]+$" required>
  <button type="submit">Add Classification</button>
</form>
<script>
  document.getElementById('addClassificationForm').addEventListener('submit', function(e) {
    const input = document.getElementById('classification_name');
    const pattern = /^[A-Za-z0-9]+$/;
    if (!pattern.test(input.value)) {
      alert('Classification name must not contain spaces or special characters.');
      e.preventDefault();
    }
  });
</script>
