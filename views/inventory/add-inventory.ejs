<!-- views/inventory/add-inventory.ejs -->
<h1>Add New Inventory Item</h1>
<% if (message) { %>
  <div class="flash-message"><%= message %></div>
<% } %>
<% if (errors && errors.length > 0) { %>
  <ul class="error-list">
    <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<form id="addInventoryForm" class="add-inventory-form" action="/inv/add-inventory" method="POST" novalidate>
  <label for="classificationList">Classification:</label>
  <%- classificationList %>
  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= typeof sticky !== 'undefined' ? sticky.inv_make : '' %>" required>
  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= typeof sticky !== 'undefined' ? sticky.inv_model : '' %>" required>
  <label for="inv_year">Year:</label>
  <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" value="<%= typeof sticky !== 'undefined' ? sticky.inv_year : '' %>" required>
  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" required><%= typeof sticky !== 'undefined' ? sticky.inv_description : '' %></textarea>
  <label for="inv_image">Image Path:</label>
  <input type="text" id="inv_image" name="inv_image" value="<%= typeof sticky !== 'undefined' ? sticky.inv_image : '/images/vehicles/no-image.png' %>" required>
  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= typeof sticky !== 'undefined' ? sticky.inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" required>
  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" min="0" step="0.01" value="<%= typeof sticky !== 'undefined' ? sticky.inv_price : '' %>" required>
  <label for="inv_miles">Miles:</label>
  <input type="number" id="inv_miles" name="inv_miles" min="0" value="<%= typeof sticky !== 'undefined' ? sticky.inv_miles : '' %>" required>
  <label for="inv_color">Color:</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= typeof sticky !== 'undefined' ? sticky.inv_color : '' %>" required>
  <button type="submit">Add Inventory Item</button>
</form>
<script>
  document.getElementById('addInventoryForm').addEventListener('submit', function(e) {
    // Simple client-side validation
    const requiredFields = ['inv_make','inv_model','inv_year','inv_description','inv_image','inv_thumbnail','inv_price','inv_miles','inv_color'];
    let valid = true;
    requiredFields.forEach(function(field) {
      const el = document.getElementById(field);
      if (!el.value) valid = false;
    });
    if (!valid) {
      alert('Please fill out all required fields.');
      e.preventDefault();
    }
  });
</script>
